<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loading_bg"
    android:keepScreenOn="true"
    >

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/img_loge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/logo"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/d_5dp"
            />


        <TextView
            android:id="@+id/text_device_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/d_22sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/cf1f1f1"
            android:layout_marginRight="@dimen/d_5dp"
            />

    </RelativeLayout>

    <!--<ImageView-->
        <!--android:id="@+id/img_loging"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:src="@drawable/loging_bg"-->
        <!--android:scaleType="fitXY"-->
        <!--/>-->


    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"

        >
        <ProgressBar
            android:layout_width="@dimen/d_90dp"
            android:layout_height="@dimen/d_90dp"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_marginTop="@dimen/d_120dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/d_20sp"
            android:textColor="#f1f1f1"
            android:text="Loading......"
            />
    </LinearLayout>







</RelativeLayout>
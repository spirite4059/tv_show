<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/d_216dp"
    android:layout_height="@dimen/d_216dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ad_three_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:scaleType="fitXY"
        fresco:placeholderImage="@drawable/news"
        fresco:retryImage="@drawable/news"
        fresco:failureImage="@drawable/news"
        fresco:failureImageScaleType="fitXY"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImageScaleType="fitXY"
        fresco:retryImageScaleType="fitXY"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/ad_three_text_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:maxLines="2"
            android:text="辣子鸡"
            android:textColor="@android:color/black"
            android:paddingLeft="@dimen/d_10dp"
            android:textSize="@dimen/d_14sp"
            />

        <TextView
            android:id="@+id/ad_three_text_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:text="25元"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="@dimen/d_14sp"
            />
    </LinearLayout>




</LinearLayout>
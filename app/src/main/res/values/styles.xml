<resources>


    <style name="ThemeDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="wifiDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:background">#00000000</item>-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!--<item name="android:backgroundDimEnabled">true</item>-->
    </style>

    <style name="txt_lab" parent="Theme.AppCompat">
        <!-- 默认状态提示颜色和字体-->
        <item name="android:textColorHint">#8c8c8c</item>
        <item name="android:textSize">@dimen/d_36sp</item>
        <!-- 下面可以根据需要设置，如果没有将默认使用默认theme的颜色 -->
        <!-- Label标签的颜色 -->
        <item name="colorAccent">#c6174e</item>
        <!-- 默认状态状态设置底线颜色 -->
        <item name="colorControlNormal">#3F51b5</item>
        <!-- 选择的底线颜色 -->
        <item name="colorControlActivated">#c6174e</item>
    </style>


    <style name="app_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>




</resources>
